    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  },
  "bugs": {
    "url": "https://github.com/xLasercut/anime-quiz/issues"
  },
  "repository": {
    "type": "git",
